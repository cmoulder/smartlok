<div class="page-header">
  <h3>Guest #<%= @guest.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">

      <dt>Name</dt>
      <dd><%= @guest.name %></dd>


      <dt>Accesscode</dt>
      <dd><%= @guest.accesscode %></dd>


      <dt>Entrycount</dt>
      <dd><%= @guest.entrycount %></dd>


      <dt>Allowedcount</dt>
      <dd><%= @guest.allowedcount %></dd>


      <dt>Unrestricted</dt>
      <dd><%= @guest.unrestricted %></dd>


    </dl>

    <div class="btn-group btn-group-justified">

      <a href="/guests" class="btn btn-primary">
        Back
      </a>

      <a href="/guests/<%= @guest.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_guest/<%= @guest.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>


    </div>
  </div>
</div>
