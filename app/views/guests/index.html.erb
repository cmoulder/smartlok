<div class="page-header">
  <h1>
    Guests

    <a href="/guests/new" class="btn btn-lg btn-success">New Guest</a>

  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>

        <th>Name</th>

        <th>Entries</th>

        <th>Allowed Entries</th>

        <th>Unrestricted Schedule</th>

        <th>Geofencing</th>

        <th>Actions</th>
      </tr>

      <% @guests.each do |guest| %>
      <tr>

        <td><%= guest.name %></td>

        <td><%= Log.where(:accesscode => Guest.find(guest.id).accesscode).count %></td>

        <td><%= guest.allowedcount %></td>

        <td><%= guest.unrestricted %></td>

        <td><%= guest.geo %></td>

        <td>

          <a href="/guests/<%= guest.id %>/edit" class="btn btn-info">Edit</a>
          <a href="/delete_guest/<%= guest.id %>" class="btn btn-danger" rel="nofollow">Delete</a>


        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
