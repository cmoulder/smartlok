<div class="page-header">
  <h1>
    Schedules

    <a href="/schedules/new" class="btn btn-lg btn-success">New Schedule</a>

  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>

        <th>Guest</th>

        <th>Day</th>

        <th>Start time</th>

        <th>Stop time</th>

        <th>Actions</th>
      </tr>

      <% @schedules.each do |schedule| %>
      <tr>

        <td><%= schedule.guest_id %></td>

        <td><%= schedule.day %></td>

        <td><%= schedule.start_time %></td>

        <td><%= schedule.stop_time %></td>

        <td>

          <a href="/schedules/<%= schedule.id %>" class="btn btn-primary">Show</a>

          <a href="/schedules/<%= schedule.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_schedule/<%= schedule.id %>" class="btn btn-danger" rel="nofollow">Delete</a>


        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
