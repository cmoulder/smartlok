<!-- Validation failure messages -->
<% if @log.errors.any? %>
  <% @log.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Log #<%= @log.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">

    <form action="/update_log/<%= @log.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">



      <!-- Label and input for accesscode -->

      <div class="form-group">
        <label for="accesscode" class="control-label">
          Accesscode
        </label>


        <input type="text" id="accesscode" name="accesscode" placeholder="Accesscode" class="form-control" value="<%= @log.accesscode %>">

      </div>



      <!-- Label and input for status -->

      <div class="form-group">
        <label for="status" class="control-label">
          Status
        </label>


        <input type="text" id="status" name="status" placeholder="Status" class="form-control" value="<%= @log.status %>">

      </div>



      <button class="btn btn-warning">
        Update Log
      </button>
      or

      <a href="/logs/<%= @log.id %>">Cancel</a>


    </form>

  </div>
</div>
